generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  ARTISAN
  ADMIN
}

enum BookingStatus {
  PENDING
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          UserRole  @default(CUSTOMER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  artisanProfile ArtisanProfile?
  clientBookings Booking[] @relation("ClientBookings")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model ArtisanProfile {
  id            String   @id @default(cuid())
  userId        String   @unique @map("user_id")
  bio           String?  @db.Text
  skills        String[]
  yearsExp      Int?     @map("years_experience")
  hourlyRate    Float?   @map("hourly_rate")
  phone         String?
  address       String?
  city          String?
  state         String?
  zipCode       String?  @map("zip_code")
  serviceRadius Int?     @default(10) @map("service_radius")
  profilePhoto  String?  @map("profile_photo") @db.Text
  verified      Boolean  @default(false)
  rating        Float    @default(0)
  totalJobs     Int      @default(0) @map("total_jobs")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookings Booking[] @relation("ArtisanBookings")

  @@map("artisan_profiles")
}

model Booking {
  id              String        @id @default(cuid())
  clientId        String        @map("client_id")
  artisanId       String        @map("artisan_id")
  status          BookingStatus @default(PENDING)
  jobDescription  String        @db.Text @map("job_description")
  estimatedPrice  Float?        @map("estimated_price")
  finalPrice      Float?        @map("final_price")
  scheduledDate   DateTime?     @map("scheduled_date")
  completedDate   DateTime?     @map("completed_date")
  clientNotes     String?       @db.Text @map("client_notes")
  artisanNotes    String?       @db.Text @map("artisan_notes")
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  client   User            @relation("ClientBookings", fields: [clientId], references: [id], onDelete: Cascade)
  artisan  ArtisanProfile  @relation("ArtisanBookings", fields: [artisanId], references: [id], onDelete: Cascade)
  review   Review?

  @@map("bookings")
}

model Review {
  id        String   @id @default(cuid())
  bookingId String   @unique @map("booking_id")
  rating    Int
  comment   String?  @db.Text
  photos    String[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@map("reviews")
}
