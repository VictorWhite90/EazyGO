generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  ARTISAN
  ADMIN
}

enum BookingStatus {
  PENDING              // Client created, waiting for artisan response
  ACCEPTED             // Artisan accepted, ready to schedule visit
  VISIT_SCHEDULED      // Site visit date set
  QUOTE_PENDING        // Artisan visited, preparing quote
  QUOTE_SENT           // Artisan submitted price
  QUOTE_APPROVED       // Client approved the price
  QUOTE_DECLINED       // Client declined the quote
  IN_PROGRESS          // Work is ongoing
  WORK_COMPLETED       // Artisan marked work as done
  COMPLETED            // Both parties confirmed, job complete
  CANCELLED            // Booking cancelled
  DISPUTED             // Dispute raised
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          UserRole  @default(CUSTOMER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  artisanProfile ArtisanProfile?
  clientBookings Booking[] @relation("ClientBookings")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model ArtisanProfile {
  id            String   @id @default(cuid())
  userId        String   @unique @map("user_id")
  bio           String?  @db.Text
  skills        String[]
  yearsExp      Int?     @map("years_experience")
  hourlyRate    Float?   @map("hourly_rate")
  phone         String?
  address       String?
  city          String?
  state         String?
  zipCode       String?  @map("zip_code")
  serviceRadius Int?     @default(10) @map("service_radius")
  profilePhoto  String?  @map("profile_photo") @db.Text
  verified      Boolean  @default(false)
  rating        Float    @default(0)
  totalJobs     Int      @default(0) @map("total_jobs")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookings Booking[] @relation("ArtisanBookings")

  @@map("artisan_profiles")
}

model Booking {
  id              String        @id @default(cuid())
  clientId        String        @map("client_id")
  artisanId       String        @map("artisan_id")
  status          BookingStatus @default(PENDING)

  // Job Details
  jobTitle        String        @map("job_title")
  jobDescription  String        @db.Text @map("job_description")
  location        String?
  urgency         String?       @default("normal") // normal, urgent, flexible

  // Site Visit
  visitDate       DateTime?     @map("visit_date")
  visitNotes      String?       @db.Text @map("visit_notes")

  // Quote/Pricing
  quotedPrice     Decimal?      @db.Decimal(10, 2) @map("quoted_price")
  laborCost       Decimal?      @db.Decimal(10, 2) @map("labor_cost")
  materialCost    Decimal?      @db.Decimal(10, 2) @map("material_cost")
  estimatedDays   Int?          @map("estimated_days")
  quoteNotes      String?       @db.Text @map("quote_notes")
  quoteSubmittedAt DateTime?    @map("quote_submitted_at")
  quoteApprovedAt  DateTime?    @map("quote_approved_at")

  // Work Progress
  workStartDate   DateTime?     @map("work_start_date")
  workEndDate     DateTime?     @map("work_end_date")
  completedDate   DateTime?     @map("completed_date")

  // Commission & Payment
  platformFee     Decimal?      @db.Decimal(10, 2) @map("platform_fee")
  platformFeePercent Float?     @default(10) @map("platform_fee_percent")
  artisanEarnings Decimal?      @db.Decimal(10, 2) @map("artisan_earnings")
  commissionPaid  Boolean       @default(false) @map("commission_paid")
  commissionDueDate DateTime?   @map("commission_due_date")
  commissionPaidDate DateTime?  @map("commission_paid_date")
  paymentProof    String?       @map("payment_proof")

  // Additional Notes
  clientNotes     String?       @db.Text @map("client_notes")
  artisanNotes    String?       @db.Text @map("artisan_notes")
  cancellationReason String?    @db.Text @map("cancellation_reason")

  // Timestamps
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  client   User            @relation("ClientBookings", fields: [clientId], references: [id], onDelete: Cascade)
  artisan  ArtisanProfile  @relation("ArtisanBookings", fields: [artisanId], references: [id], onDelete: Cascade)
  review   Review?
  quoteHistory QuoteHistory[]
  statusHistory StatusHistory[]

  @@map("bookings")
}

model Review {
  id        String   @id @default(cuid())
  bookingId String   @unique @map("booking_id")
  rating    Int
  comment   String?  @db.Text
  photos    String[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

model QuoteHistory {
  id          String   @id @default(cuid())
  bookingId   String   @map("booking_id")
  quotedPrice Decimal  @db.Decimal(10, 2) @map("quoted_price")
  laborCost   Decimal? @db.Decimal(10, 2) @map("labor_cost")
  materialCost Decimal? @db.Decimal(10, 2) @map("material_cost")
  notes       String?  @db.Text
  submittedBy String   @map("submitted_by") // userId who submitted
  createdAt   DateTime @default(now()) @map("created_at")

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@map("quote_history")
}

model StatusHistory {
  id         String        @id @default(cuid())
  bookingId  String        @map("booking_id")
  fromStatus BookingStatus @map("from_status")
  toStatus   BookingStatus @map("to_status")
  changedBy  String        @map("changed_by") // userId who made the change
  reason     String?       @db.Text
  createdAt  DateTime      @default(now()) @map("created_at")

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@map("status_history")
}
